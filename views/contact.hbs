<div class="pad-left">
    <h2>Send me an email: </h2><br>
    <form action="/contact/send" method="post">
        <input style="position: absolute;left: -30000px;" name="extraForm" id="extraForm" type="text">
        <label for="name">Your name:</label>
        <br><input name="user" id="name" class="form-input" type="text"><br>
        <br><label for="userEmail">Your email:</label>
        <br><input type = "email" name="userEmail" id="userEmail" class="form-input" type="text"><br>
        <br><label for="contactBody">Your message:</label><br>
        <textarea name="body" id="contactBody" class="form-input" rows="5" cols="40"></textarea>
        <br><label for="mathproblem">What's 1 + 3? (Put the number '4')</label><br>
        <input name="math" id="mathproblem" class="form-input" type="text"><br>
        <br><input type="submit" class="button-primary" />
        {{#if attempted}}
            {{#if result}}
                <i class="fa fa-check"></i> Email successfully sent.
            {{else}}
                <i class="fa fa-times"></i> Error: please try again later.
            {{/if}}
        {{else}}

        {{/if}}
    </form>

